<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_labrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Labrador"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_husky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mrg_top_card_dog"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toBottomOf="@id/card_labrador"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Husky"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mrg_top_card_dog"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toBottomOf="@id/card_husky"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hound"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_pug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mrg_top_card_dog"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toBottomOf="@id/card_hound"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pug"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mrg_top_card_dog"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimaryLight"
            app:layout_constraintTop_toBottomOf="@id/card_pug"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorite"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryLight"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
