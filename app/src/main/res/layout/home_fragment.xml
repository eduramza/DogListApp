<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/home"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_labrador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimary"
            android:layout_weight="1">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Labrador"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_husky"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mrg_top_card_dog"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimary"
            android:layout_weight="1">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Husky"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mrg_top_card_dog"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimary"
            android:layout_weight="1">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hound"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_pug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/mrg_top_card_dog"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="@dimen/stroke_card_size"
            app:strokeColor="@color/colorPrimary"
            android:layout_weight="1">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_std">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pug"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_card_dog"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
